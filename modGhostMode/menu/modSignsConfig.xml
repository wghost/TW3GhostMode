            <Var id="GMEncumbranceMultiplier" displayName="gm_encumbrance_slider" displayType="SLIDER;0;100;100"/>
            <Var id="GMArmorRegenPenalty" displayName="gm_armor_reg_penalty" displayType="TOGGLE"/>
