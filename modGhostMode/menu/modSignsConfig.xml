<?xml version="1.0" encoding="UTF-16"?>
<UserConfig>
   
    <Group id="GMScalingOptions" displayName="Mods.ghost_mode.gm_scaling_options">
		<PresetsArray>
			<Preset id="0" displayName="gm_default">
				<Entry varId="GMScaling" value="0"/>
				<Entry varId="GMRandomScalingMinLevel" value="0"/>
				<Entry varId="GMRandomScalingMaxLevel" value="0"/>
				<Entry varId="GMNoAnimalUpscaling" value="false"/>
				<Entry varId="GMNoAddLevelsGuards" value="false"/>
				<Entry varId="GMHealthMultiplier" value="0"/>
				<Entry varId="GMDamageMultiplier" value="0"/>
